{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "defaultSeverity": "warn",
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "indent": ["warn", 4],
      "linebreak-style": ["warn", "unix"],
      "quotes": ["warn", "double"],
      "semi": ["warn", "always"],
      "no-unused-vars": ["warn", "true"],
      "no-console": ["warn", "off"],
      "@typescript-eslint/no-unused-vars": ["warn", "true"],
      "@typescript-eslint/no-explicit-any": ["warn", "off"]
    }
  }
